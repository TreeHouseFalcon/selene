root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_file = "lf"
trim_trailing_whitespace = true
insert_final_newline = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# This makes it a lot less painful to write YAMLs in docs
[*.md]
indent_style = space
indent_size = 2